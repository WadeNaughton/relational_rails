<%= form_with url: '/libraries', method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :city %>
  <%= form.text_field :city %>
  <%= form.label :open %>
  <%= form.text_field :open %>
  <%= form.label :max_capacity %>
  <%= form.text_field :max_capacity %>
  <%= form.submit "Create Library" %>
<% end %>
